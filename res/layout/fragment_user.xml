<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/fr.ydelouis.overflowme"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/user_displayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grayLight"
            android:gravity="center_horizontal"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View style="@style/user_sectionTitle_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_user_picture" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    style="@style/user_label"
                    android:text="@string/age" />

                <TextView
                    android:id="@+id/user_age"
                    style="@style/user_entry" />

                <TextView
                    android:id="@+id/user_cityLabel"
                    style="@style/user_label"
                    android:text="@string/city" />

                <TextView
                    android:id="@+id/user_city"
                    style="@style/user_entry" />

                <TextView
                    android:id="@+id/user_countryLabel"
                    style="@style/user_label"
                    android:text="@string/country" />

                <TextView
                    android:id="@+id/user_country"
                    style="@style/user_entry" />

                <TextView
                    style="@style/user_label"
                    android:text="@string/user_memberFor" />

                <TextView
                    android:id="@+id/user_seniority"
                    style="@style/user_entry" />
            </LinearLayout>
        </LinearLayout>
        
        <View style="@style/user_sectionTitle_divider" />

        <fr.ydelouis.overflowme.view.UserSectionTitle_
            android:id="@+id/user_aboutMe"
            style="@style/user_sectionTitle"
            app:title="@string/user_aboutMe" />

        <View style="@style/user_sectionTitle_divider" />

        <fr.ydelouis.overflowme.view.UserReputationTitle_
            android:id="@+id/user_reputation"
            style="@style/user_sectionTitle" />

        <View style="@style/user_sectionTitle_divider" />

        <fr.ydelouis.overflowme.view.UserBadgesTitle_
            android:id="@+id/user_badges"
            style="@style/user_sectionTitle" />

        <View style="@style/user_sectionTitle_divider" />

        <fr.ydelouis.overflowme.view.UserSectionTitle_
            android:id="@+id/user_answers"
            style="@style/user_sectionTitle"
            app:title="@string/answers" />

        <View style="@style/user_sectionTitle_divider" />

        <fr.ydelouis.overflowme.view.UserSectionTitle_
            android:id="@+id/user_questions"
            style="@style/user_sectionTitle"
            app:title="@string/questions" />

        <View style="@style/user_sectionTitle_divider" />

        <fr.ydelouis.overflowme.view.UserSectionTitle_
            android:id="@+id/user_tags"
            style="@style/user_sectionTitle"
            app:title="@string/tags" />

        <View style="@style/user_sectionTitle_divider" />

        <fr.ydelouis.overflowme.view.UserVotesTitle_
            android:id="@+id/user_votes"
            style="@style/user_sectionTitle" />

        <View style="@style/user_sectionTitle_divider" />
    </LinearLayout>

</ScrollView>