<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aftv="http://schemas.android.com/apk/res/fr.ydelouis.overflowme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/menuMe_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_user_picture" />

        <fr.ydelouis.overflowme.view.AutoFitTextView
            android:id="@+id/menuMe_displayName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            aftv:maxTextSize="25sp"
            aftv:minTextSize="16sp"
            android:gravity="center_horizontal"
            android:text="yDelouis"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/menuMe_reputation"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="1,234 reputation"
	        android:textColor="@color/black"
	        android:textSize="18sp" />
	    
	    <TextView
	        android:id="@+id/menuMe_reputationChange"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="4dp"
	        android:text="(+10)"
	        android:textColor="@color/orange"
	        android:textStyle="italic"
	        android:textSize="16sp"
	        android:visibility="gone" />
    
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/menuMe_goldPoint"
            style="@style/menuMe_badgePoint"
            android:src="@drawable/ic_badge_gold" />

        <TextView
            android:id="@+id/menuMe_goldText"
            style="@style/menuMe_badgeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="151" />
        
        <TextView
	        android:id="@+id/menuMe_goldChange"
	        style="@style/menuMe_badgeTextChange"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="(+1)"
	        android:visibility="gone" />

        <ImageView
            android:id="@+id/menuMe_silverPoint"
            style="@style/menuMe_badgePoint"
            android:src="@drawable/ic_badge_silver" />

        <TextView
            android:id="@+id/menuMe_silverText"
            style="@style/menuMe_badgeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2470" />
        
        <TextView
	        android:id="@+id/menuMe_silverChange"
	        style="@style/menuMe_badgeTextChange"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="(+2)"
	        android:visibility="gone" />

        <ImageView
            android:id="@+id/menuMe_bronzePoint"
            style="@style/menuMe_badgePoint"
            android:src="@drawable/ic_badge_bronze" />

        <TextView
            android:id="@+id/menuMe_bronzeText"
            style="@style/menuMe_badgeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3402" />
        
        <TextView
	        android:id="@+id/menuMe_bronzeChange"
	        style="@style/menuMe_badgeTextChange"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="(+3)"
	        android:visibility="gone" />
    </LinearLayout>

</LinearLayout>